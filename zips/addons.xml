<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
  <addon id="plugin.program.dawgwizard" name="[B][COLOR red]Dawg[COLOR snow]Wizard [/COLOR][/B]" version="4.20" provider-name="J-Dawg">
    <requires>
      <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
      <provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
      <summary lang="en_GB">Dawg Wizard for updating Dawg build in Kodi</summary>
      <description lang="en_GB">Dawg Wizard</description>
      <disclaimer lang="en_GB">Them Dawgs is Hell</disclaimer>
      <language>en</language>
      <platform>all</platform>
      <license>GPL-2.0-or-later</license>
      <assets>
        <icon>resources/icon.png</icon>
        <fanart>resources/fanart.jpg</fanart>
      </assets>
    </extension>
  </addon>

  <addon id="repository.repodawg" name="RepoDawg Repository" version="1.0.24" provider-name="RepoDawg">
    <requires>
      <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.addon.repository" name="RepoDawg">
      <dir>
        <info compressed="false">https://jason247g.github.io/RepoDawg/zips/addons.xml</info>
        <checksum>https://jason247g.github.io/RepoDawg/zips/addons.xml.md5</checksum>
        <datadir zip="true">https://jason247g.github.io/RepoDawg/zips/</datadir>
      </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
      <summary>RepoDawg Repository</summary>
      <description>Custom RepoDawg add-on repository</description>
      <platform>all</platform>
    </extension>
  </addon>
</addons>
